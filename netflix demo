<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Netflix Avengers Clone</title>
  <style>
    body {
      margin: 0;
      background-color: #111;
      color: white;
      font-family: Arial, sans-serif;
    }
    .app { overflow-x: hidden; }
    .banner {
      position: relative;
      height: 50vh;
      background-size: cover;
      background-position: center;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }
    .banner h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .banner p {
      width: 45%;
      font-size: 1rem;
      line-height: 1.3;
      max-height: 100px;
      overflow: hidden;
    }
    .row {
      margin: 1rem;
    }
    .row h2 {
      margin-left: 0.5rem;
    }
    .row__posters {
      display: flex;
      overflow-x: auto;
      padding: 1rem 0.5rem;
    }
    .row__poster {
      max-height: 200px;
      margin-right: 10px;
      transition: transform 0.2s;
      border-radius: 5px;
    }
    .row__poster:hover {
      transform: scale(1.08);
    }
  </style>
</head>
<body>
  <div id="root"></div>

  <!-- React + ReactDOM via CDN -->
  <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script type="text/javascript">
    const { useEffect, useState } = React;

    const API_KEY = "YOUR_TMDB_API_KEY";
    const BASE_URL = "https://api.themoviedb.org/3";

    async function fetchMovies(query) {
      const res = await axios.get(`${BASE_URL}/search/movie`, {
        params: { api_key: API_KEY, query }
      });
      return res.data.results;
    }

    function Banner({ movie }) {
      if (!movie) return null;
      return (
        React.createElement('div', {
          className: 'banner',
          style: {
            backgroundImage: `url("https://image.tmdb.org/t/p/original/${movie.backdrop_path}")`
          }
        },
          React.createElement('h1', null, movie.title),
          React.createElement('p', null, movie.overview)
        )
      );
    }

    function Row({ title, movies }) {
      return (
        React.createElement('div', { className: 'row' },
          React.createElement('h2', null, title),
          React.createElement('div', { className: 'row__posters' },
            movies.map(movie =>
              React.createElement('img', {
                key: movie.id,
                className: 'row__poster',
                src: `https://image.tmdb.org/t/p/w300/${movie.poster_path}`,
                alt: movie.title
              })
            )
          )
        )
      );
    }

    function App() {
      const [movies, setMovies] = useState([]);

      useEffect(() => {
        fetchMovies("Avengers").then(setMovies);
      }, []);

      const randomMovie = movies.length ? movies[Math.floor(Math.random() * movies.length)] : null;

      return (
        React.createElement('div', { className: 'app' },
          React.createElement(Banner, { movie: randomMovie }),
          React.createElement(Row, { title: "Avengers Movies", movies })
        )
      );
    }

    const root = ReactDOM.createRoot(document.getElementById("root"));
    root.render(React.createElement(App));
  </script>
</body>
</html>
